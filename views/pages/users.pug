html
  include ../includes/head.pug
  body
    include ../includes/nav.pug
    div.container
      h1 Users
      div.usersContainer
        if users.length > 0
          div.userContainer
            div.user
              div.username Username
              div.name First Name
              div.name Last Name
              div.email Email
              div.age Age
              span.edit
          each user in users
            div.user
              div.username #{user.username}
              div.name #{user.firstname}
              div.name #{user.lastname}
              div.email #{user.email}
              div.age #{user.age}
              span.edit
                a(href='/edituser/'+user.firstname)
                  i.far.fa-edit
                a(href='/deleteuser/'+user.firstname)
                  i.fas.fa-trash
        else
          div Sorry, there aren't any users registered.